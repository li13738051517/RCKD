<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    tools:context=".activity.BarJobWantActivity"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="match_parent"
            android:background="@color/black"
            android:layout_height="1dp"/>
        <LinearLayout
            android:id="@+id/lin1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottombar_height"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv1"
                android:layout_width="@dimen/wd"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginLeft="@dimen/bot_jp"
                android:layout_marginRight="@dimen/bot_jp"
                android:maxLines="1"
                android:textSize="14sp"
                android:drawableLeft="@drawable/tv_ch"
                android:text="职位名称" />

            <View
                android:layout_width="1dp"
                android:layout_height="@dimen/fab_margin"
                android:layout_gravity="center_vertical"
                android:background="@color/black" />

            <EditText
                android:id="@+id/et1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/text_tie"
                android:layout_alignBottom="@+id/text_tie"
                android:layout_gravity="center|right"
                android:layout_marginLeft="@dimen/bot_jp"
                android:layout_marginStart="15dp"
                android:textSize="14sp"
                android:layout_toEndOf="@+id/text_tie"
                android:layout_toRightOf="@+id/text_tie"
                android:hint="Android工程师"
                android:maxLines="1" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:background="@color/black"
            android:layout_height="1dp"/>

        <LinearLayout
            android:id="@+id/lin5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottombar_height"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv5"
                android:layout_width="@dimen/wd"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginLeft="@dimen/bot_jp"
                android:layout_marginRight="@dimen/bot_jp"
                android:maxLines="1"
                android:textSize="14sp"
                android:drawableLeft="@drawable/tv_ch"
                android:text="职类类别" />

            <View
                android:layout_width="1dp"
                android:layout_height="@dimen/fab_margin"
                android:layout_gravity="center_vertical"
                android:background="@color/black" />

            <TextView
                android:id="@+id/et5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/text_tie"
                android:layout_alignBottom="@+id/text_tie"
                android:layout_gravity="center|right"
                android:layout_marginLeft="@dimen/bot_jp"
                android:layout_marginStart="15dp"
                android:textSize="14sp"
                android:layout_toEndOf="@+id/text_tie"
                android:layout_toRightOf="@+id/text_tie"
                android:text="销售代表"
                android:maxLines="1" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:background="@color/black"
            android:layout_height="1dp"/>


        <LinearLayout
            android:id="@+id/lin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottombar_height"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv"
                android:layout_width="@dimen/wd"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginLeft="@dimen/bot_jp"
                android:layout_marginRight="@dimen/bot_jp"
                android:maxLines="1"
                android:textSize="14sp"
                android:text="招聘人数"/>

            <View
                android:layout_width="1dp"
                android:layout_height="@dimen/fab_margin"
                android:layout_gravity="center_vertical"
                android:background="@color/black" />

            <EditText
                android:id="@+id/et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/text_tie"
                android:layout_alignBottom="@+id/text_tie"
                android:layout_gravity="center|right"
                android:layout_marginLeft="@dimen/bot_jp"
                android:layout_marginStart="15dp"
                android:textSize="14sp"
                android:inputType="number"
                android:layout_toEndOf="@+id/text_tie"
                android:layout_toRightOf="@+id/text_tie"
                android:hint="10"
                android:maxLines="1" />

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:background="@color/black"
            android:layout_height="1dp"/>

        <LinearLayout
            android:id="@+id/lin2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottombar_height"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv2"
                android:layout_width="@dimen/wd"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginLeft="@dimen/bot_jp"
                android:layout_marginRight="@dimen/bot_jp"
                android:maxLines="1"
                android:textSize="14sp"
                android:drawableLeft="@drawable/tv_ch"
                android:text="薪资待遇"/>

            <View
                android:layout_width="1dp"
                android:layout_height="@dimen/fab_margin"
                android:layout_gravity="center_vertical"
                android:background="@color/black" />

            <TextView
                android:id="@+id/et2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/text_tie"
                android:layout_alignBottom="@+id/text_tie"
                android:layout_gravity="center|right"
                android:layout_marginLeft="@dimen/bot_jp"
                android:layout_marginStart="15dp"
                android:textSize="14sp"
                android:layout_toEndOf="@+id/text_tie"
                android:layout_toRightOf="@+id/text_tie"
                android:hint="10000元"
                android:maxLines="1" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:background="@color/black"
            android:layout_height="1dp"/>

        <LinearLayout
            android:id="@+id/lin3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottombar_height"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv3"
                android:layout_width="@dimen/wd"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginLeft="@dimen/bot_jp"
                android:layout_marginRight="@dimen/bot_jp"
                android:maxLines="1"
                android:text="工作地区"
                android:drawableLeft="@drawable/tv_ch"
                android:textSize="14sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="@dimen/fab_margin"
                android:layout_gravity="center_vertical"
                android:background="@color/black" />

            <TextView
                android:id="@+id/et3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/text_tie"
                android:layout_alignBottom="@+id/text_tie"
                android:layout_gravity="center|right"
                android:layout_marginLeft="@dimen/bot_jp"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@+id/text_tie"
                android:layout_toRightOf="@+id/text_tie"
                android:text=" 广德县"
                android:maxLines="1"
                android:textSize="14sp" />

        </LinearLayout>




        <View
            android:layout_width="match_parent"
            android:background="@color/black"
            android:layout_height="1dp"/>

        <LinearLayout
            android:id="@+id/lin4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottombar_height"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv4"
                android:layout_width="@dimen/wd"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginLeft="@dimen/bot_jp"
                android:layout_marginRight="@dimen/bot_jp"
                android:maxLines="1"
                android:text="福利待遇"
                android:textSize="14sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="@dimen/fab_margin"
                android:layout_gravity="center_vertical"
                android:background="@color/black" />

            <TextView
                android:id="@+id/et4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/text_tie"
                android:layout_alignBottom="@+id/text_tie"
                android:layout_gravity="center|right"
                android:layout_marginLeft="@dimen/bot_jp"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@+id/text_tie"
                android:layout_toRightOf="@+id/text_tie"
                android:text="五险、一金、包吃、包住、周末双休年底双薪、房补、话补"
                android:maxLines="1"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:ellipsize="marquee"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin12"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottombar_height"
            android:visibility="gone"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv12"
                android:layout_width="@dimen/wd"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginLeft="@dimen/bot_jp"
                android:layout_marginRight="@dimen/bot_jp"
                android:maxLines="1"
                android:textSize="14sp"
                android:text="有效期" />

            <View
                android:layout_width="1dp"
                android:layout_height="@dimen/fab_margin"
                android:layout_gravity="center_vertical"
                android:background="@color/black" />

            <TextView
                android:id="@+id/et12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/text_tie"
                android:layout_alignBottom="@+id/text_tie"
                android:layout_gravity="center|right"
                android:layout_marginLeft="@dimen/bot_jp"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@+id/text_tie"
                android:layout_toRightOf="@+id/text_tie"
                android:hint="3个月"
                android:maxLines="1"
                android:textSize="14sp" />

        </LinearLayout>



        <View
            android:layout_width="match_parent"
            android:background="@color/black"
            android:layout_height="1dp"/>

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lin2"
            android:layout_marginTop="1dp"
            android:background="@drawable/textbg"
            android:gravity="start"
            android:hint="在此进行职位描述"
            android:textSize="14sp"
            android:lines="5"
            android:paddingBottom="@dimen/bot_jp"
            android:paddingTop="@dimen/bot_jp"
            android:textColorHint="@color/hint_color"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


        <View
            android:layout_width="match_parent"
            android:background="@color/black"
            android:layout_height="1dp"/>

        <LinearLayout
            android:id="@+id/lin7"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottombar_height"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv7"
                android:layout_width="@dimen/wd"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginLeft="@dimen/bot_jp"
                android:layout_marginRight="@dimen/bot_jp"
                android:maxLines="1"
                android:text="学历要求"
                android:textSize="14sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="@dimen/fab_margin"
                android:layout_gravity="center_vertical"
                android:background="@color/black" />

            <TextView
                android:id="@+id/et7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/text_tie"
                android:layout_alignBottom="@+id/text_tie"
                android:layout_gravity="center|right"
                android:layout_marginLeft="@dimen/bot_jp"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@+id/text_tie"
                android:layout_toRightOf="@+id/text_tie"
                android:maxLines="1"
                android:text="不限"
                android:textSize="14sp" />

        </LinearLayout>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black" />

        <LinearLayout
            android:id="@+id/lin6"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottombar_height"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv6"
                android:layout_width="@dimen/wd"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginLeft="@dimen/bot_jp"
                android:layout_marginRight="@dimen/bot_jp"
                android:maxLines="1"
                android:textSize="14sp"
                android:text="工作经验" />

            <View
                android:layout_width="1dp"
                android:layout_height="@dimen/fab_margin"
                android:layout_gravity="center_vertical"
                android:background="@color/black" />

            <TextView
                android:id="@+id/et6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/text_tie"
                android:layout_alignBottom="@+id/text_tie"
                android:layout_gravity="center|right"
                android:layout_marginLeft="@dimen/bot_jp"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@+id/text_tie"
                android:layout_toRightOf="@+id/text_tie"
                android:hint="1-3年"
                android:maxLines="1"
                android:textSize="14sp" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:background="@color/black"
            android:layout_height="1dp"/>

        <LinearLayout

            android:id="@+id/lin8"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottombar_height"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv8"
                android:layout_width="@dimen/wd"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginLeft="@dimen/bot_jp"
                android:layout_marginRight="@dimen/bot_jp"
                android:maxLines="1"
                android:textSize="14sp"
                android:text="性别要求" />

            <View
                android:layout_width="1dp"
                android:layout_height="@dimen/fab_margin"
                android:layout_gravity="center_vertical"
                android:background="@color/black" />

            <TextView
                android:id="@+id/et8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/text_tie"
                android:layout_alignBottom="@+id/text_tie"
                android:layout_gravity="center|right"
                android:layout_marginLeft="@dimen/bot_jp"
                android:layout_marginStart="15dp"
                android:textSize="14sp"
                android:layout_toEndOf="@+id/text_tie"
                android:layout_toRightOf="@+id/text_tie"
                android:text="男"
                android:maxLines="1" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:background="@color/black"
            android:layout_height="1dp"/>

        <LinearLayout
            android:id="@+id/lin9"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottombar_height"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv9"
                android:layout_width="@dimen/wd"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginLeft="@dimen/bot_jp"
                android:layout_marginRight="@dimen/bot_jp"
                android:maxLines="1"
                android:text="年龄要求"
                android:textSize="14sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="@dimen/fab_margin"
                android:layout_gravity="center_vertical"
                android:background="@color/black" />

            <EditText
                android:id="@+id/et_a9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/text_tie"
                android:layout_alignBottom="@+id/text_tie"
                android:layout_gravity="center|right"
                android:layout_marginLeft="@dimen/bot_jp"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@+id/text_tie"
                android:layout_toRightOf="@+id/text_tie"
                android:layout_weight="0.45"
                android:hint="18"
                android:maxLength="2"
                android:textSize="14sp" />

            <View
                android:layout_width="10dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="@color/black" />

            <EditText
                android:id="@+id/et9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/text_tie"
                android:layout_alignBottom="@+id/text_tie"
                android:layout_gravity="center|right"
                android:layout_marginLeft="@dimen/bot_jp"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@+id/text_tie"
                android:layout_toRightOf="@+id/text_tie"
                android:layout_weight="0.45"
                android:hint="55"
                android:maxLines="1"
                android:maxLength="2"
                android:textSize="14sp" />
            <TextView
                android:layout_width="wrap_content"
                android:text="(不填为不限)"
                android:textSize="14sp"
                android:textColor="@color/changbtn_text_color"
                android:layout_gravity="center|right"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:background="@color/black" />
        <LinearLayout

            android:id="@+id/lin10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottombar_height"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv10"
                android:layout_width="@dimen/wd"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginLeft="@dimen/bot_jp"
                android:layout_marginRight="@dimen/bot_jp"
                android:maxLines="1"
                android:textSize="14sp"
                android:text="手机(账号)" />

            <View
                android:layout_width="1dp"
                android:layout_height="@dimen/fab_margin"
                android:layout_gravity="center_vertical"
                android:background="@color/black" />

            <EditText
                android:id="@+id/et10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/text_tie"
                android:layout_alignBottom="@+id/text_tie"
                android:layout_gravity="center|right"
                android:layout_marginLeft="@dimen/bot_jp"
                android:layout_marginStart="15dp"
                android:textSize="14sp"
                android:layout_toEndOf="@+id/text_tie"
                android:layout_toRightOf="@+id/text_tie"
                android:hint="手机(账号)"
                android:maxLines="1" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:background="@color/black"
            android:layout_height="1dp"/>
        
        <Button
            android:id="@+id/bt"
            android:layout_marginTop="18dp"
            android:layout_width="match_parent"
            android:text="发布"
            android:textColor="@color/white"
            android:background="@color/bottom_bg"
            android:layout_height="48dp" />


        <View
            android:layout_width="match_parent"
            android:background="@color/black"
            android:layout_height="1dp"/>

    </LinearLayout>

</ScrollView>