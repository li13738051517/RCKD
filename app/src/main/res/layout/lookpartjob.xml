<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <include layout="@layout/base_title" android:id="@+id/include"/>
        <LinearLayout
            android:id="@+id/ll_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/in"
            android:background="@color/city_gray"
            android:orientation="vertical">

            <Button
                android:id="@+id/imageView3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@+id/in"
                android:layout_gravity="top|center"
                android:layout_margin="25dp"
                android:background="@drawable/photo"
                android:src="@drawable/photo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="拍张照片吧"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_marginBottom="20dp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/lin1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottombar_height"
            android:layout_below="@+id/ll_item"
            android:layout_marginTop="1dp"
            android:background="@drawable/textbg"
            android:orientation="horizontal"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:weightSum="1">

            <TextView
                android:id="@+id/text_tie"
                android:layout_width="@dimen/wd"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginLeft="@dimen/bot_jp"
                android:layout_marginRight="@dimen/bot_jp"
                android:textSize="14sp"
                android:drawableLeft="@drawable/tv_ch"
                android:text="期望职位" />

            <View
                android:layout_width="1dp"
                android:layout_height="@dimen/fab_margin"
                android:layout_gravity="center_vertical"
                android:background="@color/black" />

            <EditText
                android:id="@+id/text_ad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/text_tie"
                android:layout_alignBottom="@+id/text_tie"
                android:layout_gravity="center|right"
                android:layout_marginLeft="@dimen/bot_jp"
                android:textSize="14sp"
                android:layout_toEndOf="@+id/text_tie"
                android:layout_toRightOf="@+id/text_tie"
                android:hint="IT工程师 "
                android:layout_weight="0.04" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/lin2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottombar_height"
            android:layout_below="@+id/lin1"
            android:layout_marginTop="1dp"
            android:background="@drawable/textbg"
            android:orientation="horizontal"
            android:layout_toRightOf="@+id/imageView2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <TextView
                android:id="@+id/text_tie2"
                android:layout_width="@dimen/wd"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginLeft="@dimen/bot_jp"
                android:layout_marginRight="@dimen/bot_jp"
                android:textSize="14sp"
                android:drawableLeft="@drawable/tv_ch"
                android:text="职位类别" />

            <View
                android:layout_width="1dp"
                android:layout_height="@dimen/fab_margin"
                android:layout_gravity="center_vertical"
                android:background="@color/black" />

            <TextView
                android:id="@+id/text_ad2"
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/text_tie2"
                android:layout_alignBottom="@+id/text_tie2"
                android:layout_gravity="center|right"
                android:layout_marginLeft="@dimen/bot_jp"
                android:layout_toEndOf="@+id/text_tie2"
                android:layout_toRightOf="@+id/text_tie2"
                android:gravity="center|left"
                android:hint="钟点工"
                android:maxLines="1" />

        </LinearLayout>



        <LinearLayout
            android:id="@+id/lin3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottombar_height"
            android:layout_below="@+id/lin1"
            android:layout_marginTop="1dp"
            android:background="@drawable/textbg"
            android:orientation="horizontal"
            android:layout_toRightOf="@+id/imageView2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:weightSum="1">

            <TextView
                android:id="@+id/text_tie3"
                android:layout_width="@dimen/wd"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginLeft="@dimen/bot_jp"
                android:layout_marginRight="@dimen/bot_jp"
                android:textSize="14sp"
                android:drawableLeft="@drawable/tv_ch"
                android:text="期望薪资" />

            <View
                android:layout_width="1dp"
                android:layout_height="@dimen/fab_margin"
                android:layout_gravity="center_vertical"
                android:background="@color/black" />

            <EditText
                android:id="@+id/text_ad3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/text_tie2"
                android:layout_alignBottom="@+id/text_tie2"
                android:layout_gravity="center|right"
                android:layout_marginLeft="@dimen/bot_jp"
                android:layout_toEndOf="@+id/text_tie2"
                android:layout_toRightOf="@+id/text_tie2"
                android:layout_weight="0.60"
                android:gravity="center|left"
                android:hint="3000"
                android:inputType="number"
                android:maxEms="8"
                android:maxLines="1"
                android:textSize="14sp" />
            <View
                android:layout_width="15dp"
                android:layout_height="1dp"
                android:layout_gravity="center_vertical"
                android:background="@color/black" />
            <TextView
                android:id="@+id/text_money"
                android:layout_width="@dimen/wd"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:gravity="right"
                android:layout_marginLeft="@dimen/bot_jp"
                android:layout_marginRight="@dimen/bot_jp"
                android:textSize="14sp"
                android:text="元/天"
                android:layout_weight="0.3" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottombar_height"
            android:layout_below="@+id/lin1"
            android:layout_marginTop="1dp"
            android:background="@drawable/textbg"
            android:orientation="horizontal"
            android:layout_toRightOf="@+id/imageView2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <TextView
                android:id="@+id/text_tie4"
                android:layout_width="@dimen/wd"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginLeft="@dimen/bot_jp"
                android:layout_marginRight="@dimen/bot_jp"
                android:textSize="14sp"
                android:drawableLeft="@drawable/tv_ch"
                android:text="工作地点" />

            <View
                android:layout_width="1dp"
                android:layout_height="@dimen/fab_margin"
                android:layout_gravity="center_vertical"
                android:background="@color/black" />

            <TextView
                android:id="@+id/text_ad4"
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/text_tie2"
                android:layout_alignBottom="@+id/text_tie2"
                android:layout_gravity="center|right"
                android:layout_marginLeft="@dimen/bot_jp"
                android:layout_toEndOf="@+id/text_tie2"
                android:layout_toRightOf="@+id/text_tie2"
                android:gravity="center|left"
                android:hint="广东"
                android:maxLines="1" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/lin5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottombar_height"
            android:layout_below="@+id/lin1"
            android:layout_marginTop="1dp"
            android:background="@drawable/textbg"
            android:orientation="horizontal"
            android:layout_toRightOf="@+id/imageView2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <TextView
                android:id="@+id/text_tie5"
                android:layout_width="@dimen/wd"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginLeft="@dimen/bot_jp"
                android:layout_marginRight="@dimen/bot_jp"
                android:textSize="14sp"
                android:text="出工日期" />

            <View
                android:layout_width="1dp"
                android:layout_height="@dimen/fab_margin"
                android:layout_gravity="center_vertical"
                android:background="@color/black" />

            <TextView
                android:id="@+id/text_a5"
                android:layout_width="106dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/text_tie2"
                android:layout_alignBottom="@+id/text_tie2"
                android:layout_gravity="center|right"
                android:layout_marginLeft="@dimen/bot_jp"
                android:layout_toEndOf="@+id/text_tie2"
                android:layout_toRightOf="@+id/text_tie2"
                android:layout_weight="0.19"
                android:gravity="center|left"
                android:hint="开始日期"
                android:maxLines="1"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/text_d5"
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/text_tie2"
                android:layout_alignBottom="@+id/text_tie2"
                android:layout_gravity="center|right"
                android:layout_marginLeft="@dimen/bot_jp"
                android:layout_toEndOf="@+id/text_tie2"
                android:layout_toRightOf="@+id/text_tie2"
                android:gravity="center|left"
                android:hint="结束时间"
                android:layout_weight="0.30"
                android:maxLines="1" />

        </LinearLayout>


        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lin2"
            android:layout_marginTop="1dp"
            android:background="@drawable/textbg"
            android:gravity="start"
            android:hint="自我介绍一下吧,不能没有内容哦!!!"
            android:textSize="14sp"
            android:lines="5"
            android:paddingBottom="@dimen/bot_jp"
            android:paddingTop="@dimen/bot_jp"
            android:textColorHint="@color/hint_color"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />




        <LinearLayout
            android:layout_below="@+id/textView"
            android:id="@+id/llImages"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/bottombar_height"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView"
            android:layout_below="@+id/textView"
            android:layout_marginTop="1dp"
            android:drawableLeft="@drawable/upload"
            android:gravity="center"
            android:text="拍照上传图片"
            android:visibility="gone" />

        <com.rckd.view.GridViewNoScroll
            android:id="@+id/list_view"
            android:layout_margin="1dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignEnd="@+id/button"
            android:layout_alignLeft="@+id/button"
            android:layout_alignRight="@+id/button"
            android:layout_alignStart="@+id/button"
            android:layout_below="@+id/textView"
            android:numColumns="3"
            android:horizontalSpacing="3dp"
            android:listSelector="#00000000"
            android:stretchMode="columnWidth"
            android:verticalSpacing="3dp"
            />



        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <include layout="@layout/person_add_info_in"></include>




        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottombar_height"
            android:layout_alignEnd="@+id/textView"
            android:layout_alignLeft="@+id/imageView2"
            android:layout_alignRight="@+id/textView"
            android:layout_alignStart="@+id/imageView2"
            android:layout_below="@+id/list_view"
            android:layout_marginTop="5dp"
            android:background="@color/green"
            android:text="发布" />

    </LinearLayout>

</ScrollView>