<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/re_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include layout="@layout/user_top" />

            <LinearLayout
                android:id="@+id/relative1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/re_top"
                android:background="@color/white"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="0dp"
                    android:alpha="10"
                    android:background="@color/line_bg"
                    android:orientation="vertical" />

                <RelativeLayout
                    android:id="@+id/job_want_bg"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="30dp">

                    <ImageView
                        android:id="@+id/job_want_icon"
                        android:layout_width="26dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="30dp"
                        android:background="@drawable/job_want_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/job_want_icon"
                        android:text="我的求职"
                        android:textColor="@color/black" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/job_line"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="0dp"
                    android:alpha="10"
                    android:layout_marginLeft="30dp"
                    android:background="@color/line_bg"
                    android:orientation="vertical" />

                <RelativeLayout
                    android:id="@+id/my_recruit_bg"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/job_line">

                    <ImageView
                        android:id="@+id/my_recruit_icon"
                        android:layout_width="26dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="30dp"
                        android:background="@drawable/my_recruit_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/my_recruit_icon"
                        android:text="我的招聘"
                        android:textColor="@color/black" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/person_line2"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="0dp"
                    android:alpha="10"
                    android:background="@color/line_bg"
                    android:layout_marginLeft="30dp"
                    android:orientation="vertical" />

                <RelativeLayout
                    android:id="@+id/person_bg"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp">

                    <ImageView
                        android:id="@+id/person_icon"
                        android:layout_width="26dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="30dp"
                        android:background="@drawable/gr" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/person_icon"
                        android:text="账号管理"
                        android:textColor="@color/black" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/person_line"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/person_bg"
                    android:layout_marginTop="0dp"
                    android:alpha="10"
                    android:layout_marginLeft="30dp"
                    android:background="@color/line_bg"
                    android:orientation="vertical" />

                <RelativeLayout
                    android:id="@+id/company_bg"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_below="@id/person_line">

                    <ImageView
                        android:id="@+id/company_icon"
                        android:layout_width="26dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="30dp"
                        android:background="@drawable/gs" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/company_icon"
                        android:text="便民贴管理"
                        android:textColor="@color/black" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/company_line"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/company_bg"
                    android:layout_marginTop="0dp"
                    android:alpha="10"
                    android:background="@color/line_bg"
                    android:orientation="vertical" />

                <RelativeLayout
                    android:id="@+id/company_new"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_below="@id/person_line">

                    <ImageView
                        android:id="@+id/company_new_icon"
                        android:layout_width="26dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="30dp"
                        android:background="@drawable/gs" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/company_new_icon"
                        android:text="我的商企动态"
                        android:textColor="@color/black" />
                </RelativeLayout>


            </LinearLayout>

            <RelativeLayout
                android:id="@+id/relative2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relative1"
                android:layout_marginTop="30dp"
                android:background="@color/white">
                <RelativeLayout
                    android:id="@+id/pay_bg"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_alignEnd="@+id/pay_line"
                    android:layout_alignParentTop="true"
                    android:layout_alignRight="@+id/pay_line">

                    <ImageView
                        android:id="@+id/pay_icon"
                        android:layout_width="26dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="30dp"
                        android:background="@drawable/pay_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/pay_icon"
                        android:text="充值"
                        android:textColor="@color/black" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/pay_line"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/pay_bg"
                    android:layout_marginTop="0dp"
                    android:alpha="10"
                    android:layout_marginLeft="30dp"
                    android:background="@color/line_bg"
                    android:orientation="vertical" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relative2"
                android:background="@color/white">
                <RelativeLayout
                    android:id="@+id/logout_bg"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp">

                    <ImageView
                        android:id="@+id/logout_icon"
                        android:layout_width="26dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="30dp"
                        android:background="@drawable/logout_icon" />

                    <TextView
                        android:id="@+id/logout_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/logout_icon"
                        android:text="注销帐号"
                        android:textColor="@color/black" />
                </RelativeLayout>
            </RelativeLayout>
            <LinearLayout

                android:layout_width="fill_parent"
                android:layout_height="1dp"

                android:layout_below="@+id/relative3"
                android:layout_marginTop="0dp"
                android:alpha="10"
                android:background="@color/line_bg"
                android:orientation="vertical" />
        </RelativeLayout>
    </ScrollView>
</FrameLayout>