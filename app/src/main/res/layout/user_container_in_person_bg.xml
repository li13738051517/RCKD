<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <include layout="@layout/base_title"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:alpha="10"
        android:background="@color/line_bg"
        android:orientation="vertical" />

    <RelativeLayout
        android:id="@+id/job_want_bg1"
        android:layout_width="fill_parent"
        android:layout_height="40dp">

        <ImageView
            android:id="@+id/job_want_icon1"
            android:layout_width="26dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:background="@drawable/job_want_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/job_want_icon1"
            android:text="修改密码"
            android:textColor="@color/black" />
    </RelativeLayout>

    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="0dp"
        android:alpha="10"
        android:background="@color/line_bg"
        android:orientation="vertical" />

    <RelativeLayout
        android:id="@+id/job_want_bg2"
        android:layout_width="fill_parent"
        android:layout_height="40dp">

        <ImageView
            android:id="@+id/job_want_icon2"
            android:layout_width="26dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:background="@drawable/job_want_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/job_want_icon2"
            android:text="消费记录"
            android:textColor="@color/black" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/job_want_bg3"
        android:layout_width="fill_parent"
        android:layout_height="40dp">

        <ImageView
            android:id="@+id/job_want_icon3"
            android:layout_width="26dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:background="@drawable/job_want_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/job_want_icon3"
            android:text="更换手机号码"
            android:textColor="@color/black" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="0dp"
        android:alpha="10"
        android:background="@color/line_bg"
        android:orientation="vertical" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="0dp"
        android:alpha="10"
        android:background="@color/line_bg"
        android:orientation="vertical" />


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="0dp"
        android:alpha="10"
        android:background="@color/line_bg"
        android:orientation="vertical" />


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="0dp"
        android:alpha="10"
        android:background="@color/line_bg"
        android:orientation="vertical" />

    <ImageView
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="bottom"
        android:layout_marginTop="10dp"
        android:background="@color/bg_app"
        android:gravity="center"
        android:padding="10dp"
        android:src="@drawable/tab_ft2_selector"
        android:textColor="@color/black" />
</LinearLayout>