<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
            android:id="@+id/lin_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottombar_height"
            android:layout_marginTop="1dp"
            android:background="@drawable/textbg"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="@dimen/wd"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginLeft="@dimen/bot_jp"
                android:layout_marginRight="@dimen/bot_jp"
                android:textSize="14sp"
                android:text="姓名" />

            <View
                android:layout_width="1dp"
                android:layout_height="@dimen/fab_margin"
                android:layout_gravity="center_vertical"
                android:background="@color/black" />

            <EditText
                android:id="@+id/ed_name_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|right"
                android:layout_marginLeft="@dimen/bot_jp"
                android:gravity="center|left"
                android:hint="李政"
                android:maxLines="1"
                android:textSize="14sp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/lin_year"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottombar_height"
            android:layout_marginTop="1dp"
            android:background="@drawable/textbg"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_year"
                android:layout_width="@dimen/wd"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginLeft="@dimen/bot_jp"
                android:layout_marginRight="@dimen/bot_jp"
                android:text="出生年份"
                android:textSize="14sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="@dimen/fab_margin"
                android:layout_gravity="center_vertical"
                android:background="@color/black" />

            <TextView
                android:id="@+id/ed_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/text_tie2"
                android:layout_alignBottom="@+id/text_tie2"
                android:layout_gravity="center|right"
                android:layout_marginLeft="@dimen/bot_jp"
                android:layout_toEndOf="@+id/text_tie2"
                android:layout_toRightOf="@+id/text_tie2"
                android:gravity="center|left"
                android:maxLines="1"
                android:minEms="2"
                android:text="1992"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_sex"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottombar_height"
            android:layout_below="@+id/lin1"
            android:layout_marginTop="1dp"
            android:background="@drawable/textbg"
            android:orientation="horizontal"
            android:layout_toRightOf="@+id/imageView2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <TextView
                android:id="@+id/tv_sex"
                android:layout_width="@dimen/wd"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginLeft="@dimen/bot_jp"
                android:layout_marginRight="@dimen/bot_jp"
                android:text="性别"
                android:textSize="14sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="@dimen/fab_margin"
                android:layout_gravity="center_vertical"
                android:background="@color/black" />

            <TextView
                android:id="@+id/tv_sex_value"
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|right"
                android:layout_marginLeft="@dimen/bot_jp"
                android:gravity="center|left"
                android:hint="男"
                android:minEms="2"
                android:maxLines="1" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/lin_career"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottombar_height"
            android:layout_marginTop="1dp"
            android:background="@drawable/textbg"
            android:orientation="horizontal"
          >

            <TextView
                android:id="@+id/text_career"
                android:layout_width="@dimen/wd"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginLeft="@dimen/bot_jp"
                android:layout_marginRight="@dimen/bot_jp"
                android:text="学历"
                android:textSize="14sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="@dimen/fab_margin"
                android:layout_gravity="center_vertical"
                android:background="@color/black" />

            <TextView
                android:id="@+id/text_career_value"
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|right"
                android:layout_marginLeft="@dimen/bot_jp"
                android:gravity="center|left"
                android:text="初中"
                android:minEms="2"
                android:maxLines="1" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/lin5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottombar_height"
            android:layout_below="@+id/lin2"
            android:layout_marginTop="1dp"
            android:background="@drawable/textbg"
            android:orientation="horizontal"
            android:layout_toRightOf="@+id/imageView2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <TextView
                android:id="@+id/text_work_year"
                android:layout_width="@dimen/wd"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginLeft="@dimen/bot_jp"
                android:layout_marginRight="@dimen/bot_jp"
                android:text="工作年限"
                android:textSize="14sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="@dimen/fab_margin"
                android:layout_gravity="center_vertical"
                android:background="@color/black" />

            <TextView
                android:id="@+id/text_work_year_value"
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/text_tie2"
                android:layout_alignBottom="@+id/text_tie2"
                android:layout_gravity="center|right"
                android:layout_marginLeft="@dimen/bot_jp"
                android:layout_toEndOf="@+id/text_tie2"
                android:layout_toRightOf="@+id/text_tie2"
                android:gravity="center|left"
                android:text="1年"
                android:minEms="2"
                android:maxLines="1" />
        </LinearLayout>
</LinearLayout>