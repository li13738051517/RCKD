<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:orientation="vertical"
    android:id="@+id/re_top"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true">
   <View
       android:layout_width="match_parent"
       android:layout_height="1dp"
       android:layout_alignParentTop="true"
       android:background="@color/black"/>
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/image_icon"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@mipmap/image_placholder"
        android:layout_margin="20dp"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/gray_line_color"/>

    <TextView
        android:id="@+id/tv_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textSize="14sp"
        android:text="积分:36"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/tv_phne"
        android:layout_alignStart="@+id/tv_phne" />

    <TextView
        android:id="@+id/tv_phne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="13738051517"
        android:textSize="20sp"
        android:layout_alignTop="@+id/image_icon"
        android:layout_toRightOf="@+id/image_icon"
        android:layout_toEndOf="@+id/image_icon" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/image_icon"
        android:layout_alignLeft="@+id/tv_num"
        android:layout_alignStart="@+id/tv_num"
        android:visibility="gone"
        android:text="TextView" />

</RelativeLayout>
