<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".activity.ImproveHrDataActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/base_title"/>
        <LinearLayout
            android:id="@+id/ll_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/in"
            android:background="@color/city_gray"
            android:orientation="vertical">

            <Button
                android:id="@+id/photo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@+id/in"
                android:layout_gravity="top|center"
                android:layout_margin="25dp"
                android:background="@drawable/photo"
                android:src="@drawable/photo" />

            <TextView
                android:id="@+id/tv_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="拍张照片让更多人了解您的企业"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_marginBottom="20dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="1dp"
            android:id="@+id/lin1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottombar_height"
            android:background="@drawable/textbg"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_tie1"
                android:layout_width="@dimen/wd"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginLeft="@dimen/bot_jp"
                android:layout_marginRight="@dimen/bot_jp"
                android:drawableLeft="@drawable/tv_ch"
                android:textSize="14sp"
                android:text="招聘方名称" />

            <View
                android:layout_width="1dp"
                android:layout_height="@dimen/fab_margin"
                android:layout_gravity="center_vertical"
                android:background="@color/black" />

            <EditText
                android:id="@+id/text_ad1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/text_tie"
                android:layout_alignBottom="@+id/text_tie"
                android:layout_gravity="center|right"
                android:layout_marginLeft="@dimen/bot_jp"
                android:textSize="14sp"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@+id/text_tie"
                android:layout_toRightOf="@+id/text_tie"
                android:hint="请填写" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="1dp"
            android:id="@+id/lin2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottombar_height"
            android:background="@drawable/textbg"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_tie2"
                android:layout_width="@dimen/wd"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginLeft="@dimen/bot_jp"
                android:layout_marginRight="@dimen/bot_jp"
                android:drawableLeft="@drawable/tv_ch"
                android:textSize="14sp"

                android:text="性质"/>

            <View
                android:layout_width="1dp"
                android:layout_height="@dimen/fab_margin"
                android:layout_gravity="center_vertical"
                android:background="@color/black" />

            <TextView
                android:id="@+id/text_ad2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|right"
                android:layout_marginLeft="@dimen/bot_jp"
                android:textSize="14sp"
                android:layout_marginStart="15dp"
                android:layout_weight="90"
                android:text="民营" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="1dp"
            android:id="@+id/lin3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottombar_height"
            android:background="@drawable/textbg"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_tie3"
                android:layout_width="@dimen/wd"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginLeft="@dimen/bot_jp"
                android:layout_marginRight="@dimen/bot_jp"
                android:drawableLeft="@drawable/tv_ch"
                android:textSize="14sp"

                android:text="规模" />

            <View
                android:layout_width="1dp"
                android:layout_height="@dimen/fab_margin"
                android:layout_gravity="center_vertical"
                android:background="@color/black" />

            <TextView
                android:id="@+id/text_ad3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/text_tie"
                android:layout_alignBottom="@+id/text_tie"
                android:layout_gravity="center|right"
                android:layout_marginLeft="@dimen/bot_jp"
                android:textSize="14sp"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@+id/text_tie"
                android:layout_toRightOf="@+id/text_tie"

                android:text="50人以下" />
        </LinearLayout>
        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/textCon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lin2"
            android:layout_marginTop="1dp"
            android:background="@drawable/textbg"
            android:gravity="start"
            android:hint="公司简历:"
            android:textSize="14sp"
            android:lines="5"
            android:paddingBottom="@dimen/bot_jp"
            android:paddingTop="@dimen/bot_jp"
            android:textColorHint="@color/hint_color"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <LinearLayout
            android:layout_marginTop="1dp"
            android:id="@+id/lin4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottombar_height"
            android:background="@drawable/textbg"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_tie4"
                android:layout_width="@dimen/wd"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginLeft="@dimen/bot_jp"
                android:layout_marginRight="@dimen/bot_jp"
                android:textSize="14sp"

                android:text="联系人" />

            <View
                android:layout_width="1dp"
                android:layout_height="@dimen/fab_margin"
                android:layout_gravity="center_vertical"
                android:background="@color/black" />

            <EditText
                android:id="@+id/text_ad4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/text_tie"
                android:layout_alignBottom="@+id/text_tie"
                android:layout_gravity="center|right"
                android:layout_marginLeft="@dimen/bot_jp"
                android:textSize="14sp"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@+id/text_tie"
                android:layout_toRightOf="@+id/text_tie"
                android:hint="请填写" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="1dp"
            android:id="@+id/lin5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottombar_height"
            android:background="@drawable/textbg"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_tie5"
                android:layout_width="@dimen/wd"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginLeft="@dimen/bot_jp"
                android:layout_marginRight="@dimen/bot_jp"
                android:textSize="14sp"

                android:text="招聘电话" />

            <View
                android:layout_width="1dp"
                android:layout_height="@dimen/fab_margin"
                android:layout_gravity="center_vertical"
                android:background="@color/black" />


                <EditText
                    android:id="@+id/text_ad5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/text_tie"
                    android:layout_alignBottom="@+id/text_tie"
                    android:layout_gravity="center|right"
                    android:layout_marginLeft="@dimen/bot_jp"
                    android:textSize="14sp"
                    android:layout_marginStart="15dp"
                    android:layout_toEndOf="@+id/text_tie"
                    android:layout_toRightOf="@+id/text_tie"
                    android:layout_weight="40"
                    android:inputType="phone"
                    android:hint="13738051517" />
            <View
                android:layout_width="1dp"
                android:layout_height="@dimen/fab_margin"
                android:layout_gravity="center_vertical"
                android:background="@color/black" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/text_tie"
                    android:layout_alignBottom="@+id/text_tie"
                    android:layout_gravity="center|right"
                    android:textSize="10sp"
                    android:textColor="@color/red"
                    android:layout_marginLeft="@dimen/bot_jp"
                    android:layout_toEndOf="@+id/text_tie"
                    android:layout_toRightOf="@+id/text_tie"
                    android:layout_weight="10"
                    android:text="(可修改)" />
        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="1dp"
            android:id="@+id/lin6"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottombar_height"
            android:background="@drawable/textbg"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_tie6"
                android:layout_width="@dimen/wd"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginLeft="@dimen/bot_jp"
                android:layout_marginRight="@dimen/bot_jp"
                android:textSize="14sp"
                android:text="地址" />

            <View
                android:layout_width="1dp"
                android:layout_height="@dimen/fab_margin"
                android:layout_gravity="center_vertical"
                android:background="@color/black" />

            <TextView
                android:id="@+id/text_ad6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/text_tie"
                android:layout_alignBottom="@+id/text_tie"
                android:layout_gravity="center|right"
                android:layout_marginLeft="@dimen/bot_jp"
                android:textSize="14sp"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@+id/text_tie"
                android:layout_toRightOf="@+id/text_tie"
                android:text="安徽省宣城市广德县" />
        </LinearLayout>


        <com.rckd.view.GridViewNoScroll
            android:id="@+id/list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp"
            android:gravity="center"
            android:numColumns="3"
            android:padding="1dp"
            android:horizontalSpacing="3dp"
            android:listSelector="#00000000"
            android:stretchMode="columnWidth"
            android:verticalSpacing="3dp" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottombar_height"
            android:layout_below="@+id/list_view"
            android:background="@color/green"
            android:text="保存发布"
            android:layout_marginTop="1dp"
            android:layout_gravity="bottom"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />



    </LinearLayout>
</ScrollView>